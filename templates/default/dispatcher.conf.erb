# Generated by Chef for <%= @fqdn %>
# Local modifications will be overwritten.

<IfModule disp_apache2.c>
	# location of the configuration file. eg: 'conf/dispatcher.any'
        DispatcherConfig <%= @conf_file %>

	# location of the dispatcher log file. eg: 'logs/dispatcher.log'
        DispatcherLog    <%= @log_file %>

	# log level for the dispatcher log
	# 0 Errors
	# 1 Warnings
	# 2 Infos
	# 3 Debug
        DispatcherLogLevel <%= @log_level %>

	# if turned to 1, the dispatcher looks like a normal module
        DispatcherNoServerHeader <%= @no_server_header %>

	# if turned to 1, request to / are not handled by the dispatcher
	# use the mod_alias then for the correct mapping
        DispatcherDeclineRoot <%= @decline_root %>

	# if turned to 1, the dispatcher uses the URL already processed
	# by handlers preceeding the dispatcher (i.e. mod_rewrite)
	# instead of the original one passed to the web server.
        DispatcherUseProcessedURL <%= @use_processed_url %>

	# if turned to 1, the dispatcher does not spool an error
	# response to the client (where the status code is greater
	# or equal than 400), but passes the status code to
	# Apache, which e.g. allows an ErrorDocument directive
	# to process such a status code.
        DispatcherPassError <%= @pass_error %>

</IfModule>
